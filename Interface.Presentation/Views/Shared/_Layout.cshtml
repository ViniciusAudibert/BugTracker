<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <link rel="shortcut icon" href="~/Content/Images/Application/cockroach.png" type="image/x-icon" />
    @Styles.Render("~/Content/layout")
    @RenderSection("css", false)
</head>
<body class="home">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="col-md-7">
            <nav class="navbar-default pull-left">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            </nav>
            <div class="search hidden-xs banner-top">
                <a href=@Url.Action("Index", "User")><img src="~/content/images/website/banner-top.png" class="logo" /></a>
            </div>
        </div>
        <div class="col-md-5">
            <div class="header-rightside">

                <ul class="list-inline header-top pull-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @{
                                var imgPerfil = "~/content/images/user/" + Interface.Presentation.Services.UserSessionService.LoggedUser.Image;
                            }
                            <img src="@Url.Content(imgPerfil)" alt="user" id="user-image">
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-content">
                                    <span>@Interface.Presentation.Services.UserSessionService.LoggedUser.Name</span>
                                    <p class="text-muted small">
                                        @Interface.Presentation.Services.UserSessionService.LoggedUser.Email
                                    </p>
                                    <div class="divider">
                                    </div>
                                    <a href=@Url.Action("Loggout", "Login") class="view btn-sm active">Loggout</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 display-table-cell v-align box" id="navigation">
                <div class="navi">
                    <ul>
                        <li class="link" data-target-id="Home"><a href=@Url.Action("", "User")><i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span></a></li>
                        <li class="link" data-target-id="Donwload"><a href=@Url.Action("Download", "User")><i class="fa fa-download" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Download</span></a></li class="link">
                        <li class="link" data-target-id="Doceument"><a href=@Url.Action("Documentation", "Home") target="_blank"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Documentation</span></a></li>
                        <li class="link" data-target-id="Account"><a href=@Url.Action("Account", "User")><i class="fa fa-user" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Profile</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <div class="user-dashboard">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/layout")
    @RenderSection("scripts", false)
</body>
</html>