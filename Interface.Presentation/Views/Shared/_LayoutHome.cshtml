<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <link rel="shortcut icon" href="~/Content/Images/Application/cockroach.png" type="image/x-icon" />
    @Styles.Render("~/Content/layout-home")
    @RenderSection("css", false)

</head>
<body>
    <!--Header-->
    <header class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <a id="logo" class="pull-left" href=@Url.Action("Index", "Home")><img src="~/Content/Images/WebSite/banner-top.png" /></a>
            <div class="pull-right navigation-bar">
                <ul class="nav">
                    <li class="nav-link" data-target-id="Home"><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li class="nav-link" data-target-id="Documentation"><a href=@Url.Action("Documentation", "Home")>Documentation</a></li>
                </ul>
                <ul class="nav">
                    <li class="nav-link" data-target-id="MyPanel"><a href=@Url.Action("Index", "User")>My Panel</a></li>
                    <li class="nav-link" data-target-id="Contact"><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                    <li class="login">
                        <a data-toggle="modal" href="#loginForm"><i class="icon-lock fa fa-sign-in" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <!-- /header -->

    <div>
        <div class="alert alert-info" id="informations">
            @TempData["Message"]
        </div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @RenderBody()

    </div>

    @Html.Partial("_Login")

    @Scripts.Render("~/bundles/layout-home")

    @RenderSection("scripts", false)
</body>
</html>
